<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/users/register.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminusers</from-outcome>
            <to-view-id>/admin/users.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminmodules</from-outcome>
            <to-view-id>/admin/puppetmodules.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>adminplatforms</from-outcome>
            <to-view-id>/admin/platforms.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>runningHistory</from-outcome>
            <to-view-id>/cloud/runningHistory.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>running</from-outcome>
            <to-view-id>/cloud/running.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>newrun</from-outcome>
            <to-view-id>/cloud/newRun.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>userfiles</from-outcome>
            <to-view-id>/cloud/userFileSystem.xhtml</to-view-id>
            <redirect>1</redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>platformExecutionDetail</from-outcome>
            <to-view-id>/cloud/platformExecutionDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
